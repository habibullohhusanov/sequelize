<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Lenta</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">DiaryBook</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">My Dairies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Lenta</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">My Profile</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">

  </div>
  <div class="col-md-6 offset-3">
    <% if (diary) {%>
      <div class="card mb-5 mt-5">
        <div class="card-body">
          <!-- <div class="list-group mb-1">
                      <a href="#" class="list-group-item list-group-item-action">
                          <img src="https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg"
                              class="rounded-circle float-start" style="height: 30px;" alt="...">
                          <h5 class="card-title">Username</h5>
                      </a>
                  </div> -->
          <p class="card-text">
            <%= diary.text %>
          </p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
        <img src="<%= diary.imageUrl %>" class="card-img-bottom" alt="...">
        <div class="card-footer">
          <a href="/diaries/<%= diary.id %>/edit" type="button" class="btn btn-primary">Update</a>
          <form action="/diaries/<%= diary.id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <%} else {%>
      <h1>Diary empty</h1>
    <% } %>
  </div>
  <div class="container">
    <div class="add-comment">
      <form action="/comments/<%= diary.id %>/diary" method="POST">
        <input type="text" name="comment">
        <button type="submit">Save</button>
      </form>
    </div>
    <div class="comments">
      <% comments.forEach(comment => {%>
        <h1><%= comment.comment %></h1>
      <%}) %>
    </div>
    <div class="row">
  </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"></script>
</body>

</html>